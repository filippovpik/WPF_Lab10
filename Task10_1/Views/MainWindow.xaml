<Window x:Class="Task10_1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task10_1.Views"
        xmlns:vm="clr-namespace:Task10_1.ViewModels" 
        xmlns:conv="clr-namespace:Task10_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="270" Width="300"> 
    <Window.Resources>
        <conv:LoginConverter x:Key="LoginConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowViewModels/>        
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label Content="Форма входа" FontWeight="Bold" FontSize="16" Grid.Row="0" VerticalAlignment="Bottom" Margin="10"/>
        <Label Content="Логин:" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5"/>
        <Label Content="Пароль:" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5"/>        
        <TextBox Text="{Binding Username}" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" Width="150"/>
        <TextBox Text="{Binding Password}" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" Width="150"/>
        <Button Command="{Binding LoginCommand}" Content="Войти" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Height="30" Width="80"/>
        <Border Grid.Row="4" CornerRadius="5" Height="30" Width="250" VerticalAlignment="Bottom" HorizontalAlignment="Center" Background="{Binding IsSuccess, Converter={StaticResource LoginConverter}}" Margin="10">
            <TextBlock Text="{Binding StatusMessage}" Foreground="AliceBlue" HorizontalAlignment="Center" VerticalAlignment="Center"/>            
        </Border>        
    </Grid>
</Window>
